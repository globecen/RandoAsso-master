<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:orientation="vertical" android:background="@drawable/fond">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les randonnées actives"
            android:textColorHint="#000"
            android:textSize="25dp"
            android:id="@+id/membre"
            android:autoLink="web"
            android:textAppearance="@style/Theme.AppCompat.Dialog"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membre1"
            android:textColorHint="#000"
            android:textSize="25dp"
            android:id="@+id/membre1"
            android:autoLink="web"
            android:textAppearance="@style/Theme.AppCompat.Dialog"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membre2"
            android:textColorHint="#000"
            android:textSize="25dp"
            android:textAppearance="@style/Theme.AppCompat.Dialog"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Creer une randonnée"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_background"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>